{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc",
            "type": "shell",
            "command": "g++",

            "args": ["-g","${file}","-o","${fileBasenameNoExtension}.exe"],
            "problemMatcher":{
                "owner": "cpp",
                "fileLocation":["relative","${workspaceRoot}"],
            }

        }
    ]
}